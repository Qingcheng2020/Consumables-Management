<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/login_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="试剂耗材精细化管理平台"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size" />

    </RelativeLayout>

    <EditText
        android:id="@+id/tv_userName"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:hint="用户名"
        app:layout_marginTopPercent="60%w"
        android:textSize="@dimen/text_size"
        android:paddingLeft="10dp"
        android:background="@drawable/edit_corner"
        app:layout_widthPercent="70%w"
        android:singleLine="true"
        />
    <EditText
        android:id="@+id/tv_password"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:hint="密码"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/text_size"
        android:paddingLeft="10dp"
        android:background="@drawable/edit_corner"
        app:layout_widthPercent="70%w"
        android:password="true"
        android:singleLine="true"
        />
    <TextView
        android:id="@+id/forgetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码？"
        android:textSize="@dimen/text_size"
        android:layout_gravity="right"
        android:layout_marginTop="5dp"
        app:layout_marginRightPercent="20%w"
        android:visibility="gone"
        />
    <Button
        android:id="@+id/btn_login"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:textSize="@dimen/text_size"
        android:text="登录"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_select"
        android:layout_marginTop="10dp"
        app:layout_widthPercent="70%w"
        />

    <RelativeLayout
        android:layout_width="0dp"
        app:layout_widthPercent="70%w"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:layout_gravity="center_horizontal"
        tools:ignore="RtlHardcoded">

        <TextView
            android:id="@+id/btn_server_set"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="服务器设置"
            android:textSize="14sp"
            android:textColor="@color/app_blue_hl" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_regist"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:textSize="@dimen/text_size"
        android:text="立即注册"
        android:layout_gravity="center_horizontal"
        android:background="#00000000"
        android:layout_marginTop="10dp"
        app:layout_widthPercent="60%w"
        android:visibility="gone"
        />
    <RadioGroup
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_widthPercent="70%w"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        >

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:checked="true" />
        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />
    </RadioGroup>
    <EditText
        android:visibility="gone"
        android:id="@+id/tv_address"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:hint="请输入地址"
        android:text="http://"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/text_size"
        android:paddingLeft="10dp"
        android:background="@drawable/edit_corner"
        app:layout_widthPercent="70%w"
        android:singleLine="true"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        <TextView
            android:id="@+id/btn_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:text="查看版本"
            />

    </RelativeLayout>


</com.zhy.android.percent.support.PercentLinearLayout>
