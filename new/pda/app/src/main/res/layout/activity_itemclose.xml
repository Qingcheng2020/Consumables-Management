<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/white"
        >
        <AutoCompleteTextView
            android:id="@+id/et_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_weight="1"
            android:imeOptions="actionGo"
            android:hint="@string/search2"
            />

        <Button
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sousuo"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/tv_qrCode"
            style="@style/ItemPickdetailRightStyle" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone">

        <TextView
            style="@style/ItemPickdetailLeftStyle"
            android:text="@string/billMoveNo" />

        <TextView
            android:id="@+id/tv_billInNo"
            style="@style/ItemPickdetailRightStyle" />


        <TextView
            style="@style/ItemPickdetailLeftStyle"
            android:text="@string/operationDate" />

        <TextView
            android:id="@+id/tv_operationDate"
            style="@style/ItemPickdetailRightStyle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone">

        <TextView
            style="@style/ItemPickdetailLeftStyle"
            android:text="@string/branch" />

        <TextView
            android:id="@+id/tv_supplier"
            style="@style/ItemPickdetailRightStyle" />

    </LinearLayout>

    <include layout="@layout/activity_googlecards" />
</LinearLayout>
