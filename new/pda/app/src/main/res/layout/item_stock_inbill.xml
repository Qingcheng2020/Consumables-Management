<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ItemPickCardViewStyle"
    app:cardCornerRadius="10dp"
    app:cardElevation="6dp"
    >

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp"
        >
        <LinearLayout style="@style/ItemPickdetailStyle">

            <TextView
                style="@style/ItemPickdetailLeftStyle"
                android:text="@string/inbill_no" />

            <TextView
                android:id="@+id/tv_inbill_no"
                style="@style/ItemPickdetailRightDisableStyle" />
        </LinearLayout>

        <LinearLayout
            style="@style/ItemPickdetailStyle">

            <TextView
                style="@style/ItemPickdetailLeftStyle"
                android:text="@string/supplier2" />

            <TextView
                android:id="@+id/tv_supplier"
                style="@style/ItemPickdetailRightDisableStyle" />
        </LinearLayout>

        <LinearLayout style="@style/ItemPickdetailStyle">

            <TextView
                style="@style/ItemPickdetailLeftStyle"
                android:text="@string/inbill_date" />

            <TextView
                android:id="@+id/tv_inbill_date"
                style="@style/ItemPickdetailRightDisableStyle" />
        </LinearLayout>

        <LinearLayout
            style="@style/ItemPickdetailStyle">

            <TextView
                style="@style/ItemPickdetailLeftStyle"
                android:text="@string/inbill_creator" />

            <TextView
                android:id="@+id/tv_inbill_creator"
                style="@style/ItemPickdetailRightDisableStyle" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_load"
            style="@style/ItemPickSaveBtnStyle"
            android:text="读取"
            />

    </com.zhy.android.percent.support.PercentLinearLayout>
</android.support.v7.widget.CardView>
