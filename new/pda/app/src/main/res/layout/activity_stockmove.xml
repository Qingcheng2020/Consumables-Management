<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/white"
        >
        <AutoCompleteTextView
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_weight="1"
            android:imeOptions="actionGo"
            android:hint="@string/search2"
            />

        <Button
            android:id="@+id/btn_browser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_move_browser"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        >

        <TextView
            style="@style/ItemPickdetailLeftStyle"
            android:layout_width="80dp"
            android:text="@string/reagent_move_branch" />

        <TextView
            android:id="@+id/tv_branch"
            android:layout_weight="1"
            android:layout_width="0dp"
            style="@style/ItemPickdetailRightStyle" />

        <TextView
            style="@style/ItemPickdetailLeftStyle"
            android:layout_width="80dp"
            android:text="@string/reagent_move_applicant" />

        <TextView
            android:id="@+id/tv_applicant"
            android:layout_weight="1"
            android:layout_width="0dp"
            style="@style/ItemPickdetailRightStyle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/white"
        >

        <TextView
            style="@style/ItemPickdetailLeftStyle"
            android:layout_width="60dp"
            android:text="@string/reagent_move_date" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_weight="1"
            android:layout_width="0dp"
            style="@style/ItemPickdetailRightStyle" />


        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_move"
            />

    </LinearLayout>

    <include layout="@layout/activity_googlecards" />
</LinearLayout>
